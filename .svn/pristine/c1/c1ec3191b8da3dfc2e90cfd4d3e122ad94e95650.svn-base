<div class="content animate-panel">

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3>Asignar Suplentes </h3>
                </div>
                <div class='panel-body'>
                    <div class="col-md-6">
                        <label>Codigo Sitio: </label> {{controller.sitio.codigoSitio}}
                    </div>
                    <div class="col-md-6">
                        <label>Nombre Sitio: </label> {{controller.sitio.nombreSitio}}
                    </div>
                    <div class="col-md-6">
                        <label>Dirección: </label> {{controller.sitio.direccionSitio}}
                    </div>
                    <div class="col-md-6">
                        <label>Cargo a Asignar: </label> {{controller.personaAsignada.cargo.descripcion}}
                    </div>
                    <div class="col-md-6">
                        <label>Cantidad de Salones: </label> {{controller.sitio.cantidadSalones}}
                    </div>
                    <a class='btn btn-default' style="float: right" ng-click="controller.atras()"> Volver</a>
                </div>

            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="input-group col-md-12">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                        <input type="text" class="form-control" placeholder="Buscar" ng-model="search">

                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <tr>
                            <th>Identificación</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Cargo</th>
                            <th>Disponibilidad de Viajar</th>
                            <th>Salones</th>
                            <th>Distancia</th>
                            <th>Opciones</th>
                        </tr>
                        <tr ng-repeat="s in controller.suplentes| filter:search">
                            <td> {{s.nrodoc}}</td>
                            <td>{{s.nombres}}</td>
                            <td> {{s.apellidos}}</td>
                            <td>{{s.cargo}}</td>
                            <td> {{s.viaja}}</td>
                            <td>{{s.salones}}</td>
                            <td>{{s.distancia| number:3}}</td>
                            <td><a class="btn btn-primary"  ng-click="controller.asignar(s.nrodoc, s.idEmpleado)">Asignar</a>
                                <a class="btn btn-primary" href="" ng-click="controller.verHistorialLaboral(s.idEmpleado)">Historial Laboral</a> 
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

    </div>     

</div>
<script type="text/ng-template" id="myModalVerHistorialLaboral.html">       
    <historial-laboral></historial-laboral>
</script>
