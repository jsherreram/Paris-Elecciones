                    "and a.codigoCargo = t.codigocargo\n" +
                    "join cargos ca\n" +
                    "on a.codigoCargo = ca.codigoCargo\n" +
                    "join evento ev\n" +
                    "on a.codigoEvento = ev.codigoEvento\n" +
                    "join (\n" +
                    "	select nrodoc, max(codigoevento) as codigoevento\n" +
                    "	from (\n" +
