                    "case when eleccion.nombrePuesto is null then '' else eleccion.nombrePuesto end as nombrePuesto,\n" +
                    "eleccion.ultimocargo, eleccion.ubicacion, eleccion.codigoCargo, cc.id as idcuenta, \n" +
