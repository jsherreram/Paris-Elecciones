    @Override
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        HttpSession sesion, sesion1 ;
        String[] valores = request.getParameter("tipoEscogido").split("-");
        sesion = request.getSession();
        EmpleadoSesion emp = (EmpleadoSesion) sesion.getAttribute("empleado");
        emp.setRolActual(valores[0]);
        emp.setPruebaActual(Integer.parseInt(valores[1]));
        sesion.setAttribute("empleado", emp);
        response.sendRedirect(LoginUtil.obtenerPanelPorRol(request));
    }

