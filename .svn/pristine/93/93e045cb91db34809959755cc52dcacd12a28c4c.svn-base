<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
    <div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <div class="row">
                <h2 class="font-light m-b-xs">Administración de Pruebas</h2>
               <!--<div class="col-md-6"><h5>Administración de Pruebas</h5></div>-->
                <div class="col-md-6"><a class="btn btn-primary btn-sm"  href="#/Registrar">Registrar Nueva Prueba</a></div>
            </div>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover sorting" >
                    <thead>
                    <tr>
                        <th>ID Prueba</th>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th>Días</th>
                        <th>Fecha Aplicacion</th>
                        <th>Vtiger Estado</th>
                        <th>Vtiger Texto</th>
                        <th>Vtiger Cargo</th>
                        <th colspan="2"><center>Opciones</center></th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="reg in pruebas | filter:search | startFrom:(currentPage-1)*entryLimit | limitTo:entryLimit | orderBy:'-fechaaplicacion' ">
                            <td>{{ reg.idprueba}}</td>
                            <td>{{ reg.nombre}}</td>
                            <td>{{ reg.tnombreprueba}}</td>
                            <td>{{ reg.estadoprueba}}</td>
                            <td>{{ reg.dias}}</td>
                            <td>{{ reg.fechaaplicacion | date:'MM/dd/yyyy'}}</td>
                            <td>{{ reg.vtiger_campo_estado}}</td>
                            <td>{{ reg.vtiger_campo_texto}}</td>
                            <td>{{ reg.vtiger_campo_cargo}}</td>
                            <td><a class="btn btn-default btn-small btn-block" href="#/Editar/{{reg.idprueba}}">Editar</a></td>
                            <td><a class="btn btn-default btn-small btn-block" href="../../panel/ProgramarCapacitaciones/main.jsp#/{{reg.idprueba}}">Capacitaciones</a></td>
                        </tr>
                    </tbody>
                </table>
                <button ng-disabled="currentPage == 0" ng-click="currentPage=currentPage-1">
                    Anterior
                </button>
                {{currentPage+1}}/{{noOfPages}}
                <button ng-disabled="currentPage >= totalItems/entryLimit - 1" ng-click="currentPage=currentPage+1">
                    Siguiente
                </button>
                    <pagination page="currentPage" max-size="noOfPages" total-items="totalItems" items-per-page="entryLimit"></pagination>
            </div>
        </div>
    </div>
    </div>
    </div>
</div>


