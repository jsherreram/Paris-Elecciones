 <div class="content animate-panel" data-ng-init="listar()">
    
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-body">                   
                    <div class="pull-right m-t-lg">
                        <a href="#/depto-new" class="btn btn-sm btn-default">Nuevo</a>
                    </div>
                    <h2 class="font-light m-b-xs">
                        Registro de Departamentos
                    </h2>
                </div>
            </div>
        </div>
    </div>
    
    
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
              <div class="panel-body">
                <table class="table table-striped" >
                  <thead>
                  <tr>
                    <th>codigo</th>
                    <th>nombre</th>
                    <td>Accion</td>
                  </tr>
                  </thead>
                  <tbody>
                  <tr ng-repeat="dpto in departamentos">
                    <td>{{dpto.codigo}}</td>
                    <td>{{dpto.nombre}}</td>

                    <td>
                        <a href="#/depto-edit/{{dpto.codigo}}" class="btn btn-sm btn-default">Editar</a>
                    </td>
                    
                    <td>
                        <button ng-click="eliminar(dpto.codigo)" class="btn btn-default" > Eliminar </button>
                    </td>
                        
                  </tr>
                  </tbody>
                </table>
              </div>
            </div>
        </div>
    </div>
</div>
