                            <div class="col-md-2">
                                <input type="text" ng-model="persona.evento.nombre" id="nombreEvento" class="form-control"  readonly="true">
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label col-md-4" for="nombreDepartamento">Departamento</label>
                            <div class="col-md-2">
                                <input type="text" ng-model="persona.municipio.departamento.nombre" id="nombreDepartamento" class="form-control"  readonly="true">
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label col-md-4" for="nombreMunicipio">Municipio</label>
                            <div class="col-md-2">
                                <input type="text" ng-model="persona.municipio.nombre" id="nombreMunicipio" class="form-control"  readonly="true">
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="control-label col-md-4" for="zonaNombre">Zona</label>
                            <div class="col-md-2">
                                <input type="text" ng-model="persona.zona" id="zonaNombre" class="form-control"  readonly="true">
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label col-md-4" for="nombrePuesto">Puesto</label>
                            <div class="col-md-2">
                                <input type="text" ng-model="persona.puesto" id="nombrePuesto" class="form-control" readonly="true">
                            </div>
                        </div>
                        
                        <div class="form-group col-md-6">
                            <label class="control-label col-md-4" for="ubicacion">Ubicaci贸n</label>
                            <div class="col-md-2">
                                <input type="text" ng-model="persona.ubicacion" id="ubicacion" class="form-control" readonly="true">
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <label class="control-label col-md-4" for="nombreCargo">Cargo</label>
                            <div class="col-md-2">
                                <input type="text" ng-model="persona.cargo.descripcion" id="nombreCargo" class="form-control"  readonly="true">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-primary">
                                  <div class="panel-body">

                                      <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" >
                                            <thead>
                                            <tr>
                                              <th>Nro. Identificaci贸n</th>
                                              <th>Apellido1</th>
                                              <th>Apellido2</th>
                                              <th>Nombre1</th>
                                              <td>Nombre2</td>
                                              <td>Acci贸n</td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                              <tr>
                                                <td><input type="text" ng-model="persona.empleado.nrodoc" id="nrodoc" class="form-control"></td>

                                                <td>{{persona.empleado.apellido1}}</td>
                                                <td>{{persona.empleado.apellido2}}</td>
                                                <td>{{persona.empleado.nombre1}}</td>
                                                <td>{{persona.empleado.nombre2}}</td>

                                                <td>
                                                  <div class="form-group">
                                                      <div class="col-md-6 col-md-offset-2">
                                                          <input type ="submit" value="Asignar">
                                                      </div>
                                                  </div>
                                                </td>
                                              </tr>
                                            </tbody>
                                        </table>
                                      </div>
                                  </div>
                                </div>
                            </div>
