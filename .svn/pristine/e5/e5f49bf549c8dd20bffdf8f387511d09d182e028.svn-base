 <div class="content animate-panel" ng-submit="asignar()" data-ng-init="listarPersona()">
    
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-body">  
                    <form class="form-inline" >
                        <h2 class="font-light m-b-xs">
                            Informaci贸n Persona Asignada
                        </h2>
