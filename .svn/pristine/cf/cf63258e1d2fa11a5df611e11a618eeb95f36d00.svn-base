<div class="content animate-panel">
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-body">     
                    <div class="col-lg-12">
                        
                        <a href="#/" class="btn btn-sm btn-primary">Regresar</a>
                        
                        <h2>Seguimiento por Estados</h2>
                        
                        <div class="form-group col-md-6">
                            <div class="col-md-2">
                                <a href="templates/verArchivo_1.jsp?idPrueba={{idPrueba}}&idDpto={{nodoEscogidoSelect}}" class="btn btn-primary">Descargar Detalle de Personal en la prueba</a>
                            </div>
                        </div>
                        
                        <h4>Nodo: </h4> 
                        <select name="nodoEscogido" ng-model="nodoEscogidoSelect" ng-change="nodoEscogido()">
                            <option ng-repeat="nodos in controller.nodos" value="{{nodos.codigo}}">{{nodos.nombre}}</option>
                        </select>
                        <br>
                        <br>
                        <table class="table table-striped table-bordered table-hover" >
                            <colgroup>
                                <col class="col-lg-3">
                                <col class="col-lg-1">
                                <col class="col-lg-2">
                                <col class="col-lg-2">
                                <col class="col-lg-2">
                                <col class="col-lg-1">
                                <col class="col-lg-1">                                
                            </colgroup>
                            <thead>
                                <tr>
                                    <td align="center">Cargo</td>
                                    <td align="center">Personal Requerido</td>
                                    <td align="center">Convocados</td>
                                    <td align="center">No participa</td>
                                    <td align="center">Preinscritos</td>
                                    <td align="center">Seleccionados</td>
                                    <td align="center">Asignados</td>
                                    <td align="center">Porcentaje asignacion</td>
                                </tr>
                            </thead>    
                            <tbody>    
                                <tr ng-repeat="nodoEstados in controller.nodosEstado">
                                    <td>
                                        {{nodoEstados.descripcion}}
                                    </td>
                                    <td>
                                        {{nodoEstados.total}}
                                    </td>
                                    <td align="center">
                                        {{nodoEstados.convocada}}
                                    </td>
                                    <td align="center">
                                        {{nodoEstados.noparticipa}}
                                    </td>
                                    <td align="center">
                                        {{nodoEstados.preinscrita}}
                                    </td>
                                    <td align="center">
                                        {{nodoEstados.seleccionada}}
                                    </td>
                                    <td align="center">
                                        {{nodoEstados.asignada}}
                                    </td>
                                    <td>
                                        {{nodoEstados.porcentajeAsignacion}}
                                    </td>
                                </tr>
                            </tbody>
                        </table>    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>